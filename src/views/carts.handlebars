<div class="home-container">
    <h1 class="home-title d-flex justify-content-center">Carrito de compras</h1>
    {{#each products}}
    <div class="container mt-2 mb-2">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
                            src={{this.idproduct.thumbnail}}>
                    </div>
                    <div class="col-md-6 mt-1">
                        <h5>{{this.idproduct.title}}</h5>
                        <div class="d-flex flex-row">
                        </div>
                        <h6>{{this.idproduct.category}}</h6>
                        <p class="text-justify  para mb-0">{{this.idproduct.description}}<br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                            <h4 class="mr-1">$ {{this.idproduct.price}} </h4>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <h6 class="mr-2">Cantidad:{{this.quantity}} </h6>
                        </div>
                        <div class="d-flex  flex-column mt-1">
                            <button class="btn btn-outline-success btn-sm mt-2" onclick={add(`{{this.idproduct._id}}`,`{{this.quantity}}`)}>+</button>
                        </div>
                        <div class="d-flex  flex-column mt-0">
                            <button class="btn btn-outline-danger btn-sm mt-2"onclick={sub(`{{this.idproduct._id}}`,`{{this.quantity}}`)}>-</button>
                        </div>
                        <div class="d-flex flex-column mt-1">
                            <button class="btn btn-outline-danger btn-sm mt-2" onclick={deleteProd(`{{this.idproduct._id}}`)}
                                type="button">Borrar producto</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<div class="container mt-5 mb-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-15">
                <div class="row p-2 bg-white border border-info rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
                            src="https://logisber.com/contenido/subidas/2020/04/factura-comercial-800x450.png">
                    </div>
                    <div class="col-md-6 mt-1">
                        <h5>Factura</h5>
                        <div class="d-flex flex-row">
                        </div>
                        <h6>Cantidad de items: {{cantidadCarrito}}</h6>
                        <p class="text-justify  para mb-0">Muchas gracias por llegar hasta aqui y realizar la compra.<br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                            <h4 class="mr-1">Total a pagar: $ {{totalfactura}} </h4>
                        </div>

                        <div class="d-flex flex-column mt-4">
                            <button class="btn btn-outline-danger btn-sm mt-2" 
                                type="button" onclick={finalizarCompra()} >Finalizar compra</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/cart.js"></script>